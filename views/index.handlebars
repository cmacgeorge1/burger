<header>

</header>

<h1>Eat the Burger!</h1>

<h2>New burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <div class="card">
          {{this.burger_name}}
          <button class="updateBurgers" data-id={{this.id}}>Eat it!</button>
      </div>
    {{/unless}}
  {{/each}}
</ul>

<h2>Eat the burger!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <div class="card">
          {{this.burger_name}}
          <button class="deleteBurgers" data-id={{this.id}}>Toss it!</button>
      </div>
    {{/if}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="devour">devour?</label><br>
    <input type="radio" name="devour" value="1" checked> devour!<br>
    <input type="radio" name="devour" value="0"> Order Burger
  </div>

  <button type="submit">Add </button>
</form>